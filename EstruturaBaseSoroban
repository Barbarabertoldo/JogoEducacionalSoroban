<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Soroban Digital</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f7f7f7;
      text-align: center;
    }

    h1 {
      margin-top: 20px;
    }

    #soroban {
      display: flex;
      justify-content: center;
      margin-top: 40px;
      gap: 20px;
    }

    .coluna {
      display: flex;
      flex-direction: column;
      align-items: center;
      position: relative;
    }

    .conta {
      width: 40px;
      height: 20px;
      margin: 5px 0;
      border-radius: 10px;
      background-color: #b5651d;
      transition: transform 0.2s;
      cursor: pointer;
    }

    .barra {
      width: 50px;
      height: 4px;
      background-color: #444;
      margin: 8px 0;
    }

    /* Animações corrigidas */
    .ativo-superior {
      transform: translateY(20px); /* Desce até a barra */
      background-color: #ff8c00;
    }

    .ativo-inferior {
      transform: translateY(-20px); /* Sobe até a barra */
      background-color: #ff8c00;
    }

    #resultado {
      margin-top: 30px;
      font-size: 24px;
    }
  </style>
</head>
<body>

  <h1>Soroban Digital</h1>

  <div id="soroban"></div>

  <div id="resultado">Valor total: 0</div>

  <script>
  const soroban = document.getElementById("soroban");
  const numColunas = 5; // ✅ precisa estar aqui, antes de tudo

  function criarColuna(index) {
    const coluna = document.createElement("div");
    coluna.classList.add("coluna");
    coluna.dataset.index = index;

    const contaSuperior = document.createElement("div");
    contaSuperior.classList.add("conta", "superior");
    contaSuperior.dataset.valor = 5;
    contaSuperior.dataset.tipo = "superior";
    contaSuperior.addEventListener("click", toggleConta);
    coluna.appendChild(contaSuperior);

    const barra = document.createElement("div");
    barra.classList.add("barra");
    coluna.appendChild(barra);

    for (let i = 0; i < 4; i++) {
      const contaInferior = document.createElement("div");
      contaInferior.classList.add("conta", "inferior");
      contaInferior.dataset.valor = 1;
      contaInferior.dataset.tipo = "inferior";
      contaInferior.addEventListener("click", toggleConta);
      coluna.appendChild(contaInferior);
    }

    soroban.appendChild(coluna);
  }

  function toggleConta(e) {
    const conta = e.target;
    const tipo = conta.dataset.tipo;

    if (tipo === "superior") {
      conta.classList.toggle("ativo-superior");
    } else {
      conta.classList.toggle("ativo-inferior");
    }

    atualizarResultado();
  }

  function atualizarResultado() {
    const colunas = document.querySelectorAll(".coluna");
    let total = 0;

    colunas.forEach((coluna, index) => {
      const colunaIndex = numColunas - 1 - index; // direita = unidades
      const multiplicador = Math.pow(10, colunaIndex);

      const contas = coluna.querySelectorAll(".conta");
      contas.forEach(conta => {
        const tipo = conta.dataset.tipo;
        const valorBase = parseInt(conta.dataset.valor);

        const ativo = tipo === "superior"
          ? conta.classList.contains("ativo-superior")
          : conta.classList.contains("ativo-inferior");

        if (ativo) {
          total += valorBase * multiplicador;
        }
      });
    });

    document.getElementById("resultado").textContent = "Valor total: " + total;
  }

  // ⚠️ Cria as colunas após definir tudo acima
  for (let i = 0; i < numColunas; i++) {
    criarColuna(i);
  }
</script>


</body>
</html>
